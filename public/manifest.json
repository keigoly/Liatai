{
  "manifest_version": 3,
  "name": "リアタイ！",
  "version": "1.0.0",
  "description": "Yahoo!リアルタイム検索をサイドパネルで快適に。",
  "permissions": [
    "sidePanel"
  ],
  "host_permissions": [
    "https://search.yahoo.co.jp/*"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "リアタイ！を開く"
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}